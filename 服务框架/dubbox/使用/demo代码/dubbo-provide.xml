<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        http://www.springframework.org/schema/beans/spring-beans.xsd        http://code.alibabatech.com/schema/dubbo        http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!-- 具体的实现bean -->
    <!-- <bean id="IUserService" class="com.dubbo.test.service.impl.UserServiceImpl" /> -->

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="hjj-demo" />

    <!-- 使用multicast广播注册中心暴露服务地址 <dubbo:registry address="multicast://224.5.6.7:1234"
        /> -->

    <dubbo:monitor protocol="registry"/>

    <!-- 使用zookeeper注册中心暴露服务地址 -->
    <dubbo:registry address="zookeeper://127.0.0.1:2181" />

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="rest" server="servlet" port="8080" contextpath="services"/>

    <dubbo:protocol name="dubbo"  port="20880" serialization="kryo"/>


    <dubbo:service interface="com.hjj.demo.service.DubboxService"   ref="dubboxServiceImpl" timeout="7200000" actives="10" protocol="dubbo,rest"/>

    <dubbo:provider accepts="5" loadbalance="leastactive" retries="0" />

</beans>